

class mediaEscolar
{
    static void Main(string[] args)
    {
        Console.Clear();
        Console.BackgroundColor = ConsoleColor.Black;
        Console.ForegroundColor =ConsoleColor.Cyan;
        double nota1;
        double nota2;
        double nota3;
        double nota4, nota5, nota6;
        
        Console.WriteLine("Vamos descobrir sua Media  ");
        Console.WriteLine("Soma Acada Bimestre");
        Console.WriteLine("Digite a primeira nota ");
        nota1 = double.Parse(Console.ReadLine());
        Console.WriteLine("Digite a Segunda nota ");
        nota2 = double.Parse(Console.ReadLine());
        Console.WriteLine("Digite a terceira nota ");
        nota3 = double.Parse(Console.ReadLine());
        Console.WriteLine("Digite a quarta nota ");
        nota4 = double.Parse(Console.ReadLine()); 
        Console.WriteLine("Digite a quinta Nota");
        nota5 = double.Parse(Console.ReadLine());
        Console.WriteLine("Digite a sexta nota");
        nota6 = double.Parse(Console.ReadLine());
        Console.WriteLine($@"Sua nota são N1 {nota1}, N2 {nota2}, N3 {nota3}, N4 {nota4},
          N5 {nota5}, N6 {nota6}");

        double soma , resutado;
        soma = nota1 + nota2 + nota3 + nota4 + nota5 + nota6;
        resutado = soma / 6;
        Console.WriteLine($"Sua Media é: {resutado}");
        if (resutado >= 7 )
        {
            Console.ForegroundColor = ConsoleColor.Green;
            Console.BackgroundColor = ConsoleColor.Black;
            Console.WriteLine("Você foi Aprovado");
            
        }
        else
        {
            Console.BackgroundColor = ConsoleColor.Black;
            Console.ForegroundColor = ConsoleColor.Red;
            Console.WriteLine("Você foi Reprovado");
        }

        Console.ForegroundColor = ConsoleColor.Blue;
        Console.WriteLine("---------------------------------");
        Console.WriteLine("Se tiver Duvida ir na Secretaria ");
        Console.WriteLine("--------------------------------");
        

        

    }    
    
    
    
}
